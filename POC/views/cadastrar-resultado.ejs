<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Apostas em Jogos de Futebol</title>
  </head>
  <body>
    <% if(jogos != 0) { %>
      <h1>Apostas em Jogos de Futebol</h1>
      <form method="POST" action="/cadastrar-resultado" id="formulario">
        <br>
        <% jogos.forEach(jogo => { %>
          <fieldset>
            <label for=<%= jogo.nome %>>
              <%= jogo.nome %>
            </label>
            <br>
            <input type="radio" id=<%= jogo.idCasa %> name=<%= jogo.id %> value="1">
            <label for=<%= jogo.idCasa %>>
              <%= jogo.nomeCasa %>
            </label>
            <input type="radio" id=<%= jogo.idEmpate %> name=<%= jogo.id %> value="0">
            <label for=<%= jogo.idEmpate %>>
              Empate
            </label>
            <input type="radio" id=<%= jogo.idFora %> name=<%= jogo.id %> value="2">
            <label for=<%= jogo.idFora %>>
              <%= jogo.nomeFora %>
            </label>
          </fieldset>
          <br>
        <% }) %>      
        <button type="submit">Enviar</button>
      </form>
    <% } %>
    <% if(jogos == 0) { %>
	    <h1>NÃ£o existe jogos cadastrados</h1>
    <% } %>

    <br/><br/>
    <a href="adm">Voltar</a>
  </body>
</html>